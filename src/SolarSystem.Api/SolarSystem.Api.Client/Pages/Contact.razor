@code {
    private ContactFormModel model = new();
    private bool isSubmitting = false;
    private bool isSubmitted = false;
    private string? errorMessage;
    private string? responseMessage;

    private async Task HandleSubmit()
    {
        errorMessage = null;
        isSubmitting = true;
        StateHasChanged();

        try
        {
            var response = await Http.PostAsJsonAsync("/api/contact", new
            {
                name = model.Name,
                email = model.Email,
                subject = model.Subject,
                message = model.Message,
                category = model.Category
            });

            var result = await response.Content.ReadFromJsonAsync<ContactResponse>();

            if (result?.Success == true)
            {
                responseMessage = result.Message;
                isSubmitted = true;
            }
            else
            {
                errorMessage = result?.Message ?? "An error occurred. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to send message. Please check your connection.";
            Console.WriteLine($"Contact form error: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void ResetForm()
    {
        model = new ContactFormModel();
        isSubmitted = false;
        responseMessage = null;
        errorMessage = null;
    }

    private class ContactFormModel
    {
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string? Subject { get; set; }
        public string Message { get; set; } = "";
        public string? Category { get; set; }
    }

    private class ContactResponse
    {
        public bool Success { get; set; }
        public string Message { get; set; } = "";
        public int? SubmissionId { get; set; }
    }
}
