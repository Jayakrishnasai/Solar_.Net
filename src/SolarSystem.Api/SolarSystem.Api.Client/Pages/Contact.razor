@page "/contact"
@rendermode InteractiveWebAssembly
@using System.Net.Http.Json
@using System.ComponentModel.DataAnnotations
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Contact Us - Solar System Explorer</PageTitle>

<div class="contact-container">
    <div class="contact-content">
        <!-- Left Side - Info -->
        <div class="contact-info">
            <h1>Get in Touch</h1>
            <p class="intro">Have questions about our Solar System Explorer? We'd love to hear from you.</p>
            
            <div class="info-cards">
                <div class="info-card">
                    <div class="icon">üìß</div>
                    <div class="details">
                        <h3>Email</h3>
                        <p>support@solarsystem.dev</p>
                    </div>
                </div>
                
                <div class="info-card">
                    <div class="icon">üåê</div>
                    <div class="details">
                        <h3>API</h3>
                        <p>Le Syst√®me Solaire OpenData</p>
                    </div>
                </div>
                
                <div class="info-card">
                    <div class="icon">üíª</div>
                    <div class="details">
                        <h3>Tech Stack</h3>
                        <p>ASP.NET Core + Blazor + Three.js</p>
                    </div>
                </div>
            </div>
            
            <div class="social-links">
                <a href="#" class="social-btn">GitHub</a>
                <a href="#" class="social-btn">Documentation</a>
            </div>
        </div>
        
        <!-- Right Side - Form -->
        <div class="contact-form-wrapper">
            @if (isSubmitted)
            {
                <div class="success-message">
                    <div class="success-icon">‚úÖ</div>
                    <h2>Message Sent!</h2>
                    <p>@responseMessage</p>
                    <button class="btn-secondary" @onclick="ResetForm">Send Another Message</button>
                </div>
            }
            else
            {
                <div class="form-container">
                    <h2>Send us a Message</h2>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">Full Name *</label>
                            <input type="text" id="name" @bind="model.Name" @bind:event="oninput" placeholder="John Doe" />
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email Address *</label>
                            <input type="email" id="email" @bind="model.Email" @bind:event="oninput" placeholder="john@example.com" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category" @bind="model.Category">
                            <option value="">Select a category</option>
                            <option value="general">General Inquiry</option>
                            <option value="bug">Bug Report</option>
                            <option value="feature">Feature Request</option>
                            <option value="api">API Question</option>
                            <option value="technical">Technical Support</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" id="subject" @bind="model.Subject" @bind:event="oninput" placeholder="What's this about?" />
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Message *</label>
                        <textarea id="message" @bind="model.Message" @bind:event="oninput" rows="5" placeholder="Tell us more..."></textarea>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="error-alert">
                            <span>‚ö†Ô∏è</span> @errorMessage
                        </div>
                    }
                    
                    <button type="button" class="btn-primary" @onclick="HandleSubmit" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner"></span>
                            <span>Sending...</span>
                        }
                        else
                        {
                            <span>Send Message</span>
                            <span class="arrow">‚Üí</span>
                        }
                    </button>
                </div>
            }
        </div>
    </div>
    
    <!-- Back Link -->
    <div class="back-link">
        <a href="/">‚Üê Back to Solar System</a>
    </div>
</div>

